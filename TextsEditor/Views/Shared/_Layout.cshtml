<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="container " style="background-color:azure">
    <div class=" fixed-top">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <ul class="navbar-nav col-md-6 offset-md-3 ">
                    <li class="nav-item">@Html.ActionLink("TextEditor", "Index", "Home", new { @class = "nav-link", style = "font-size:1.5em" })</li>
                    <li class="nav-item dropdown">
                        @Html.ActionLink("File", "", "", new { @class = "nav-link dropdown-toggle", id = "navbardrop", data_toggle = "dropdown", style = "font-size:1.5em" })
                        <div class="dropdown-menu">

                            @Html.ActionLink("New Files", "CreateFile", "Home", new { @class = "dropdown-item" })
                            @Html.ActionLink("Upload file", "Upload", "Home", new { @class = "dropdown-item" })
                            @Html.ActionLink("All Files", "AllFile", "Home", new { @class = "dropdown-item" })

                        </div>
                    </li>
            </ul>
        </nav>
    </div>
    <div class="container">
        <div class="container body-content">
            @RenderBody()
        </div>

        <footer  class="fixed-bottom  text-center text-light bg-dark">
            <p class="h6">&copy; @DateTime.Now.Year - Anatolii Korolko</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
