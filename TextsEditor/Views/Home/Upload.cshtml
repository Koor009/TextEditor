
<div class="card" style="margin-top:3em">
    <div class="card-header">
        <h2 class="text-center">Upload txt</h2> 
    </div>
    <div class="card-body">
        <h5 class="card-title text-center">You have an ability to upload a file.</h5>
        @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <div class="justify-content-center text-center ">
                    <input type="file" name="upload" accept=".txt" class="  btn btn-outline-primary" /><br>
                </div><br />
                <div class="row text-center justify-content-center ">
                    <button type="submit" class=" col-md-3 btn btn-lg btn-block btn-success" style="border-radius: 50px;background-color:hover: #35832f;">Submit</button>
                </div>
            </div>
        }
    </div>
</div>